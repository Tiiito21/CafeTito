---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

import MapLogic from '@/components/MapLogic.astro';

import Carousel from '@/components/Carousel.astro';
---

<Layout title="El Cafetito - Bar de Tapas y Bocadillos en Villamayor, Salamanca">

	<MapLogic />
	

	<Header />
	
	<main class="m-5 ">

		<div class="my-5">
			<h3 class="text-4xl font-black text-primary mb-4">
				Nuestro bar
			</h3>
			<Carousel />
		</div>
		
		
		<div class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-6">
			
			<div class="flex flex-col justify-center md:p-4">
				<h3 class="text-4xl font-black text-primary mb-2 md:mb-4">
					¿Dónde estamos?
				</h3>
				<p class="text-lg font-medium mb-1">
					Bar Cafetito<br>
					Pl. Constitución, 5<br>
					Villamayor, Salamanca
				</p>

			</div>
	
			<div class="w-full h-96 border border-gray-300 rounded-lg shadow-lg overflow-hidden">
				<div id="map" class="w-full h-full"></div>
			</div>
		</div>

	</main>

	<Footer />


</Layout>

